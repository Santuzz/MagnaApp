<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Shipping information"
        app:icon="@drawable/ic_baseline_delivery_dining_24">

        <EditTextPreference
            app:key="Name"
            app:title="Name"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="surname"
            app:title="Surname"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="city"
            app:title="City"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="address"
            app:title="Address"
            app:useSimpleSummaryProvider="true" />

        <EditTextPreference
            app:key="phone"
            app:title="Phone number"
            app:useSimpleSummaryProvider="true" />


    </PreferenceCategory>

    <PreferenceCategory app:title="General settings"

        app:icon="@drawable/ic_baseline_settings_24">

        <SwitchPreferenceCompat
            app:key="sync"
            app:title="Autolog" />

        <SwitchPreferenceCompat
            app:key="theme"
            app:title="Dark theme" />
    </PreferenceCategory>

    <PreferenceCategory
        app:icon="@drawable/ic_baseline_notifications_24"
        app:title="Notifications">

        <SwitchPreferenceCompat
            app:key="notifications"
            app:title="Disable notifications"
            app:summaryOn="You will no longer receive any notifications"
            app:summaryOff="You will receive all notifications"/>

        <SeekBarPreference
            app:key="volume_notifications"
            app:title="Volume"
            app:showSeekBarValue="true"
            app:defaultValue= "60" />


    </PreferenceCategory>

</PreferenceScreen>